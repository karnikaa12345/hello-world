pipeline {
  agent any
  tools {
    maven 'maven3' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat_credentials', path: '', url: 'http://3.145.125.143:8090')], contextPath: null, onFailure: false, war: 'target/hello-world.war'
        }
      }
    }
  }
}
